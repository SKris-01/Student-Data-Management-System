@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5 rounded mt-4">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-graduation-cap"></i> Student Management System
        </h1>
        <p class="lead mb-4">Manage student records, track academic progress, and streamline administrative tasks</p>
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="d-flex justify-content-center gap-3 mt-4">
                <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">
                    <i class="fas fa-user-plus"></i> Register
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
                <a asp-controller="Student" asp-action="SimpleLogin" class="btn btn-success btn-lg">
                    <i class="fas fa-user-shield"></i> Admin Login
                </a>
            </div>
        }
        else
        {
            <a asp-controller="Student" asp-action="Dashboard" class="btn btn-light btn-lg">
                <i class="fas fa-tachometer-alt"></i> Go to Dashboard
            </a>
        }
    </div>
</div>

<!-- Features Section -->
<div class="container">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-user-graduate fa-2x"></i>
                    </div>
                    <h5 class="card-title">Student Registration</h5>
                    <p class="card-text">Easy and secure student registration with comprehensive profile management including academic details and department assignment.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h5 class="card-title">Academic Tracking</h5>
                    <p class="card-text">Track academic progress, CGPA, semester information, and course details in a user-friendly dashboard interface.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon bg-warning text-white rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-search fa-2x"></i>
                    </div>
                    <h5 class="card-title">Admin Search</h5>
                    <p class="card-text">Powerful search functionality for administrators to find students by department and manage institutional records efficiently.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="bg-light py-5 mt-5 rounded">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <h3 class="text-primary"><i class="fas fa-building"></i></h3>
                    <h4 class="fw-bold">5</h4>
                    <p class="text-muted">Departments</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <h3 class="text-success"><i class="fas fa-users"></i></h3>
                    <h4 class="fw-bold">Students</h4>
                    <p class="text-muted">Registered</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <h3 class="text-info"><i class="fas fa-graduation-cap"></i></h3>
                    <h4 class="fw-bold">Courses</h4>
                    <p class="text-muted">Available</p>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="stat-item">
                    <h3 class="text-warning"><i class="fas fa-shield-alt"></i></h3>
                    <h4 class="fw-bold">Secure</h4>
                    <p class="text-muted">Platform</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }
    .feature-icon {
        transition: transform 0.3s ease;
    }
    .card:hover .feature-icon {
        transform: scale(1.1);
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
</style>
