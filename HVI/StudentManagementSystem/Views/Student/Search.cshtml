@model List<StudentManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Search Students";
    var currentUser = ViewBag.CurrentUser as StudentManagementSystem.Models.ApplicationUser;
    var departmentName = ViewBag.DepartmentName as string;
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-search"></i> Student Search Results</h2>
        </div>
        <div class="col-md-4 text-end">
            <div class="dropdown">
                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                    <i class="fas fa-user"></i> @currentUser?.Name
                </button>
                <ul class="dropdown-menu">
                    <li><span class="dropdown-item-text">Role: @currentUser?.Role</span></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-controller="Student" asp-action="Details">
                        <i class="fas fa-home"></i> Dashboard
                    </a></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Search Filters</h5>
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label for="departmentName" class="form-label">Department Name:</label>
                            <input type="text" name="departmentName" class="form-control" 
                                   value="@departmentName" placeholder="Enter department name to search" />
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <a asp-action="Search" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Search Results -->
    @if (!string.IsNullOrEmpty(departmentName))
    {
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-users"></i> 
                    Search Results for "@departmentName" 
                    <span class="badge bg-light text-dark ms-2">@Model.Count students found</span>
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="fas fa-id-badge"></i> ID</th>
                                    <th><i class="fas fa-user"></i> Name</th>
                                    <th><i class="fas fa-at"></i> Username</th>
                                    <th><i class="fas fa-graduation-cap"></i> Course</th>
                                    <th><i class="fas fa-building"></i> Department</th>
                                    <th><i class="fas fa-calendar"></i> Semester</th>
                                    <th><i class="fas fa-chart-line"></i> CGPA</th>
                                    <th><i class="fas fa-map-marker-alt"></i> Hometown</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td>@student.Id</td>
                                        <td>
                                            <strong>@student.Name</strong>
                                            @if (student.Role == "Admin")
                                            {
                                                <span class="badge bg-warning text-dark ms-1">Admin</span>
                                            }
                                        </td>
                                        <td>@student.Username</td>
                                        <td>@student.Course</td>
                                        <td>
                                            <span class="badge bg-secondary">@student.Department.DepartmentName</span>
                                        </td>
                                        <td>@student.Semester</td>
                                        <td>
                                            <span class="badge @(student.CGPA >= 3.5m ? "bg-success" : student.CGPA >= 3.0m ? "bg-warning text-dark" : "bg-danger")">
                                                @student.CGPA.ToString("F2")
                                            </span>
                                        </td>
                                        <td>@student.Hometown</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No students found</h4>
                        <p class="text-muted">No students were found in departments matching "@departmentName".</p>
                        <p class="text-muted">Try searching with a different department name.</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Search Students by Department</h4>
                <p class="text-muted">Enter a department name above to search for students in that department.</p>
                <p class="text-muted">Available departments: Computer Science, Information Technology, Electronics Engineering, Mechanical Engineering, Civil Engineering</p>
            </div>
        </div>
    }

    <!-- Back to Dashboard -->
    <div class="text-center mt-4">
        <a asp-action="Details" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        font-size: 0.9rem;
    }
    .table td {
        vertical-align: middle;
    }
    .badge {
        font-size: 0.8rem;
    }
</style>
